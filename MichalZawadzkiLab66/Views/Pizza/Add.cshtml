@using System.Web.UI.WebControls
@model MichalZawadzkiLab66.Models.Pizza

@{
    ViewBag.Title = "Add";
}

<h2>Dodaj pizze</h2>
@using (Html.BeginForm("Add", "Pizza"))
{
    <div class="row">
        <div class="col-md-2">
            @Html.LabelFor(x => x.Name)
        </div>
        <div class="col-md-5">
            @Html.TextBoxFor(x => x.Name, new {@class = "form-control"})
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            @Html.LabelFor(x => x.Price)
        </div>
        <div class="col-md-5">
            @Html.TextBoxFor(x => x.Price, new {@class = "form-control"})
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            @Html.LabelFor(x => x.Components)
        </div>
        <div class="col-md-5">
            @Html.TextBoxFor(x => x.Components, new { @class = "form-control" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-5">
            <button style="float: right" type="submit" class="btn btn-lg btn-success">Dodaj</button>
        </div>
    </div>
}

