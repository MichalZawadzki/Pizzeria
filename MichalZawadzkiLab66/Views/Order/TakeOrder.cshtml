@model MichalZawadzkiLab66.Models.TakeOrderViewModel

@{
    ViewBag.Title = "TakeOrder";
}

<h2>Złóż zamowienie</h2>
@using (Html.BeginForm("TakeOrder", "Order"))
{
    <div class="row">
        <div class="col-md-2">
            @Html.LabelFor(x => x.Order.Name)
        </div>
        <div class="col-md-5">
            @Html.TextBoxFor(x => x.Order.Name, new { @class = "form-control" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            @Html.LabelFor(x => x.Order.Surname)
        </div>
        <div class="col-md-5">
            @Html.TextBoxFor(x => x.Order.Surname, new { @class = "form-control" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            @Html.LabelFor(x => x.Order.Address)
        </div>
        <div class="col-md-5">
            @Html.TextBoxFor(x => x.Order.Address, new { @class = "form-control" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            @Html.LabelFor(x => x.Order.PhoneNumber)
        </div>
        <div class="col-md-5">
            @Html.TextBoxFor(x => x.Order.PhoneNumber, new { @class = "form-control" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            @Html.LabelFor(x => x.Pizzas)
        </div>
        <div class="col-md-5">
            @Html.DropDownListFor(x => x.Order.PizzaId, Model.Pizzas)
        </div>
    </div>
    <div class="row">
        <div class="col-md-5">
            <button style="float: right" type="submit" class="btn btn-lg btn-success">Dodaj</button>
        </div>
    </div>
}
