@model List<MichalZawadzkiLab66.Models.Pizza>
@{
    ViewBag.Title = "Home Page";
}

@if (!Request.IsAuthenticated)
{
    <div class="row">
        <div class="col-lg-4">
            @Html.ActionLink("Log as Client", "Login", "User", null, new { @class = "btn btn-success btn-lg btn-block" })
        </div>
        <div class="col-lg-4">
            @Html.ActionLink("Register as Client", "Register", "User", null, new { @class = "btn btn-info btn-lg btn-block" })
        </div>
        <div class="col-lg-4">
            @Html.ActionLink("Log as Driver", "Login", "Driver", null, new { @class = "btn btn-primary btn-lg btn-block" })
        </div>
    </div>
    
}
<div class="panel panel-default" style="margin-top: 30px">
        <table class="table table-bordered table-hover">
            <tr>
                <th>Nazwa</th>
                <th>Cena</th>
                <th>Składniki</th>
            </tr>
            @foreach (var pizza in Model)
            {
                <tr>
                    <td>@pizza.Name</td>
                    <td>@pizza.Price zł</td>
                    <td>@pizza.Components</td>
                </tr>
            }
        </table>
</div>